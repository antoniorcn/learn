<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F1E4DE">

    <!-- Título -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="24dp"
        android:text="Formulário Restaurante"
        android:textColor="#000000"
        android:textSize="24sp" />

    <!-- Campo Nome do Restaurante -->
    <EditText
        android:id="@+id/et_nome_restaurante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome do Restaurante"
        android:background="@drawable/rounded_edittext"
        android:padding="12dp"
        android:layout_marginBottom="16dp"/>

    <!-- Campo Endereço -->
    <EditText
        android:id="@+id/et_endereco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Endereço"
        android:background="@drawable/rounded_edittext"
        android:padding="12dp"
        android:layout_marginBottom="16dp"/>

    <!-- Campo Tipo de Comida -->
    <EditText
        android:id="@+id/et_tipo_comida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tipo de comida"
        android:background="@drawable/rounded_edittext"
        android:padding="12dp"
        android:layout_marginBottom="16dp"/>

    <!-- Campo Classificação -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Classificação"
            android:textColor="#000000"
            android:layout_marginEnd="16dp"/>

        <Button
            android:id="@+id/btn_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:layout_marginEnd="8dp"
            android:background="@drawable/circle_button"/>

        <TextView
            android:id="@+id/tv_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="#000000"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:padding="8dp"/>

        <Button
            android:id="@+id/btn_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:background="@drawable/circle_button"/>
    </LinearLayout>

    <!-- Campos Latitude e Longitude -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <EditText
            android:id="@+id/et_latitude"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Latitude"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp"
            android:layout_marginEnd="8dp"/>

        <EditText
            android:id="@+id/et_longitude"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Longitude"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp"/>
    </LinearLayout>

    <!-- Campo Descrição -->
    <EditText
        android:id="@+id/et_descricao"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:hint="Descrição"
        android:background="@drawable/rounded_edittext"
        android:padding="12dp"
        android:gravity="top"
        android:layout_marginBottom="24dp"/>

    <!-- Botões -->
    <Button
        android:id="@+id/btn_salvar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salvar"
        android:backgroundTint="#FBC99E"
        android:layout_marginBottom="16dp"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/btn_ver_lista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver Lista"
        android:backgroundTint="#FBC99E"
        android:textColor="#000000"/>
</LinearLayout>
